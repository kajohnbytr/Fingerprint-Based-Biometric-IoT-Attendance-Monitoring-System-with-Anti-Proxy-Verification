# Server
PORT=5000
NODE_ENV=development

# Database - store in .env, never commit
MONGODB_URI=mongodb://localhost:27017/capstone

# TLS for MongoDB (use with Atlas or remote DB)
# MONGODB_TLS=true
# MONGODB_TLS_ALLOW_INVALID=false

# Auth
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for invite links, CORS)
FRONTEND_URL=http://localhost:5173

# IoT API key (for device attendance)
IOT_API_KEY=your-iot-api-key
